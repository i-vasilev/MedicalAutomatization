<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>08-04-Vasilev</display-name>
  <servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>ru.rsreu.medicine.controller.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/main</url-pattern>
    <url-pattern>/addUser</url-pattern>
    <url-pattern>/addRecords</url-pattern>
    <url-pattern>/doctorReception</url-pattern>
    <url-pattern>/patientReception</url-pattern>
    <url-pattern>/recordToDoctor</url-pattern>
    <url-pattern>/findUser</url-pattern>
    <url-pattern>/showPatient</url-pattern>
    <url-pattern>/logout</url-pattern>
    <url-pattern>/removeUser</url-pattern>
    <url-pattern>/saveDoctor</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/jsp/403.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>style</servlet-name>
    <jsp-file>/WEB-INF/style.css</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>style</servlet-name>
    <url-pattern>/style.css</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>ru.rsreu.medicine.controller.SessionListener</listener-class>
  </listener>
  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>ru.rsreu.medicine.controller.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>